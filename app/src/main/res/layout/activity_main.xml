<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simaur_logo"
        android:layout_above="@+id/welcomeTv"
        android:src="@drawable/sirmaur_logo"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTv"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:text="Welcome to My DC\n An initiative of District Sirmaur, Himachal Pradesh "/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="#FF00B860"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/start_btn"
        android:layout_below="@+id/welcomeTv"
        android:textColor="@android:color/white"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/start_btn"
        android:text="If you are an admin,click here"/>


</RelativeLayout>